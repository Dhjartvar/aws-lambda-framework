{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ES2017",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "/opt/nodejs/framework/*": ["src/lambda/layers/framework/*"]
    },
    "typeRoots": ["./types", "node_modules/@types", "@types/node"],
    "types": ["node", "jest"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "inlineSourceMap": true
  },
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"],
  "include": ["./src/**/*.tsx", "./src/**/*.ts"]
}
